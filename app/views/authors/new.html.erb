
<div class= "container">

<%=form_tag('/createAuthor') do%>
  <div class= "form-group row">
    <div class = "col-xs-12">
          <label for= "name" >Nombre:</label>
          <input  type="text" name="name" class="form-control">

    </div>
  </div>
  <div class= "form-group row">
    <div class = "col-xs-12">
          <label for= "lastname" >Lastname:</label>
          <input  type="text" name="lastname" class="form-control">

    </div>
  </div>
  <div class ="row">
    <div class ="col-xs-12">
      <button type="submit" class="btn btn-lg btn-success btn-danger">Crear autor</button>
    </div>
  </div>
  <% end %>
</div>
